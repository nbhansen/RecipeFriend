{
  "manifest_version": 3,
  "name": "Recipe Transformer",
  "version": "1.0.0",
  "description": "Convert recipe websites to clean JSON-LD with metric units for Mealie",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background-v3.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-shim.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Transform Recipe"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  
  "commands": {
    "transform-recipe": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Transform recipe on current page"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["readability.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
